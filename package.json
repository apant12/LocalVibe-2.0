{
  "name": "localvibe",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "tsx watch server/index.ts",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build && cd .. && esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist && cp -r client/dist/* dist/",
    "build:client": "cd client && npm run build",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push:pg",
    "db:seed": "tsx scripts/seed-data.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.9.2",
    "bcryptjs": "^2.4.3",
    "drizzle-orm": "^0.35.1",
    "express": "^4.21.2",
    "express-session": "^1.18.0",
    "passport": "^0.7.0",
    "passport-apple": "^2.0.2",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.10.2",
    "@types/passport": "^1.0.16",
    "@types/passport-apple": "^2.0.0",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/pg": "^8.11.10",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.28.5",
    "esbuild": "^0.24.0",
    "tsx": "^4.19.2"
  }
}
